{% extends "skeleton_in.jinja2" %}

{% block contents %}
<div class="row">
    <div class="col-md-6">
        <form action="{{ url_for('user_blpr.delete') }}" method="POST">
            <div class="card">
                <div class="card-header">Eliminar cuenta</div>
                <div class="card-body">
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="deleteCheck1" required>
                        <label class="form-check-label" for="deleteCheck1">Entiendo que esta acción <b>no se puede deshacer</b>.</label>
                        <div class="invalid-feedback">Debes marcar esta casilla para continuar.</div>
                    </div>

                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="deleteCheck2" required>
                        <label class="form-check-label" for="deleteCheck2">Confirmo que quiero eliminar mi cuenta y todos mis datos.</label>
                        <div class="invalid-feedback">Debes marcar esta casilla para continuar.</div>
                    </div>

                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="deleteCheck3" required>
                        <label class="form-check-label" for="deleteCheck3">Entiendo que todas mis pujas, comentarios y productos también se eliminarán.</label>
                        <div class="invalid-feedback">Debes marcar esta casilla para continuar.</div>
                    </div>

                    <button type="submit" class="btn btn-danger" style="margin-top: 1em">
                        <img width="24px" src="/static/delete.svg" title="Eliminar definitivamente"/>
                        Eliminar definitivamente
                    </button>
                    <a href="/" class="btn btn-secondary"
                       style="margin-top: 1em">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock %}